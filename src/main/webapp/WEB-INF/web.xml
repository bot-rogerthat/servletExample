<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
         http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd
         http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee">

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>servletExample.LoginController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>welcome</servlet-name>
        <servlet-class>servletExample.WelcomeController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>welcome</servlet-name>
        <url-pattern>/welcome</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>checkEmptyFilter</filter-name>
        <filter-class>servletExample.CheckEmptyFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>checkEmptyFilter</filter-name>
        <servlet-name>login</servlet-name>
    </filter-mapping>
</web-app>